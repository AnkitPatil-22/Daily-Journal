<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">

  <div class="form-group">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" style="width: 100%" name="postTitle"">

    <label for="post" class="form-label">Post</label>
    <textarea name="postBody" class="form-control" id="post" style="width: 100%" rows="5" cols="80""></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>

</form>

